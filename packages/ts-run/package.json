{
  "name": "@devzolo/ts-run",
  "version": "0.0.2",
  "description": "Execute TypeScript/JavaScript with the runtime relative to your package manager",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ts-run": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check": "tsc --noEmit",
    "generate-version": "node generate-version.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "typescript",
    "javascript",
    "executor",
    "cli",
    "runtime",
    "node",
    "bun",
    "deno",
    "env",
    "package-manager",
    "ts",
    "tsx"
  ],
  "author": "devzolo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devzolo/ts-run.git"
  },
  "bugs": {
    "url": "https://github.com/devzolo/ts-run/issues"
  },
  "homepage": "https://github.com/devzolo/ts-run#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.6.0"
  }
}
